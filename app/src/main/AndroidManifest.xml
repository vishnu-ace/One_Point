<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.onepoint">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".OnePoint"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".OPositiveList"></activity>
        <activity android:name=".BecomeDonorActivity" />
        <activity android:name=".SearchDonorActivity" />
        <activity android:name=".FullScreenActivity" />
        <activity
            android:name=".DialogFacultyActivity"
            android:exported="true"
            android:label=""
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity android:name=".GalleryActivity" />
        <activity android:name=".CSELabActivity" />
        <activity
            android:name=".SpashScreen"
            android:theme="@style/Spash_Screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BloodBankActivity"
            android:label="Blood Bank" />
        <activity android:name=".CSETechnicalListActivity" />
        <activity
            android:name=".CSEFacultyListActivity"
            android:label="CSE Faculty List" />
        <activity android:name=".LabActivity" />
        <activity
            android:name=".FacultyActivity"
            android:label="Faculty" />
        <activity
            android:name=".NoticeActivity"
            android:label="Notice" />
        <activity
            android:name=".MapActivity"
            android:label="Maps" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>